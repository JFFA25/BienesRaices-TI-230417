extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-prussian-blue Bienes 
            span.font-normal.text-munsell-blue Raíces  
        h2.text-center.text-2xl.font-extrabold.text-light-blue= pagina

    div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto") 
        p(class= error ? 'bg-red-500' : 'bg-green-500').py-2.px-5.rounded-lg.w-full.font-bold.text-center.text-white.uppercase= mensaje

        if !error
            a(href="/auth/login" class="text-center font-bold text-sm text-prussian-blue uppercase mt-10 block hover:text-munsell-blue") Ya puedes Iniciar Sesión
